/* pages/myBank/myBank.wxss */
.myBank{
  width: 100%;
  position: fixed;
  top: 0px;
  left: 0px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}
.myBank .inputBox{
 width: 100%;
 background: white;
}
.myBank .inputBox view{
  width: 90%;
  display: flex;
  height: 100rpx;
  align-items: center;
  border-bottom: 1rpx solid #e8e8e8;
  margin: auto;
  font-size: 32rpx;
  position: relative;
}
.myBank .inputBox view image{
  height: 40rpx;
  width: 20rpx;
  position: absolute;
  right: 0px;
}
.myBank .inputBox view text:nth-child(1){
  width: 250rpx;
}
