.bank text:nth-child(2){
   flex: 1;
   padding-left: 25rpx;
}
.myBank .inputBox view input{
  flex: 2;
  padding-left: 15px;
}
.title{
  width: 100%;
  height: 90rpx;
  display: block;
  line-height: 90rpx;
  color: #ff7f29;
  font-size: 28rpx;
  padding-left: 5%;
  border-bottom: 20rpx solid #F8F8F8;
}
.commit{
  width: 90%;
  margin-top: 100rpx;
  background: linear-gradient(#6EAFF7, #6E9FF7);
  color: white;
  border-radius:44rpx 44rpx 44rpx 44rpx;
}
.textRiht{
  justify-content: space-between
}


